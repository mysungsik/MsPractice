<%- include("includes/head")%>
<link rel="stylesheet" href="/style/signup.css">

</head>
<body>
    <%- include("includes/header")%>

    <section id="signup-section">
        <form action="/signup" method="post" id="signup-form" name="signup-form">
            <input type="hidden" value="<%= csrftoken %>" name="_csrf">
            <h2>signup</h2>

            <label for="signup-email"> email</label>
            <input type="email" id="signup-email" name="signupEmail" >

            <label for="signup-email"> confirm email</label>
            <input type="email" id="confirm-signup-email" name="confirm-signup-email" >

            <label for="signup-password"> password</label>
            <input type="password"  id="signup-password" name="signupPassword">

            <button> log in</button>
        </form>

    </section>
</body>
</html>