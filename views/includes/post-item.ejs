<article class="post-item">
  <h2> <%= fromDatabase.title %></h2>
  <p class="post-item-author">By <%= fromDatabase.author.name %></p>
  <p><%= fromDatabase.summary %></p>
  <div class="post-actions">
    <form action="/posts/<%= fromDatabase._id %>/Delete" method="get">
      <button class="btn btn-alt">Delete Post</button>
    </form>

    <a href="/posts/<%= fromDatabase._id %>/Edit">Edit Post</a>
    <a class="btn" href="/posts/<%= fromDatabase._id %>">View Post</a>
  </div>
</article>