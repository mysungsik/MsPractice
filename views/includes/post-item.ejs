<article class="post-item">
  <h2><%= data.title %></h2>
  <p class="post-item-author">By <%= data.author_name %></p>
  <p><%= data.summary %></p>
  <div class="post-actions">
    <form action="/posts/<%= data.id %>/delete" method="POST">
      <button class="btn btn-alt">Delete Post</button>
    </form>
    <a href="/posts/<%= data.id %>/edit">Edit Post</a>
    <a class="btn" href="/posts/<%= data.id %>">View Post</a>
  </div>
</article>